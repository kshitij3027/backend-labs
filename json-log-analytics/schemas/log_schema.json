{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Log Entry",
  "description": "Schema for validating JSON log entries",
  "type": "object",
  "required": ["timestamp", "level", "service", "message"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "level": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
    },
    "service": {
      "type": "string",
      "minLength": 1
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "user_id": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "processing_time_ms": {
          "type": "number",
          "minimum": 0
        },
        "request_id": {
          "type": "string"
        },
        "ip_address": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
