# Server connection
SERVER_HOST=localhost
SERVER_PORT=9000

# File to ship logs from
LOG_FILE=/var/log/app.log

# Shipping mode: batch or continuous
SHIPPING_MODE=batch

# Enable gzip compression
COMPRESS=false

# Number of lines to group per send
BATCH_SIZE=1

# Metrics reporting interval in seconds (0 = disabled)
METRICS_INTERVAL=0
